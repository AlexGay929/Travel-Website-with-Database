</head>
<body>

   <script src="js/profile.js" defer></script>
   
    <!-- header section starts  -->
<section class="header">
    <a href="index.html" class="logo"><img src="https://i.imgur.com/SJSvHEe.png"></a>
    <nav class="navbar">
       <a href="index.html" class="active">home</a>
       <a href="about.html">about</a>
       <a href="package.html">package</a>
       <a href="book.html">book</a>
       <a href="#" id="signupButton">register</a>
       <a href="#" id="loginButton">log in</a>
       <!-- <a href="#" id="logoutButton">log out</a> -->
       <div id="profileSettings"></div>
    </nav>
    <div id="menu-btn" class="fas fa-bars"></div>
 
       <!-- Sign Up Modal -->
    <div class="signup-modal" id="signup-modal">
          <div class="modal-content">
             <span class="close-button" id="close-button">&times;</span>
             <h2>Sign Up</h2>
             <form id="signupForm" action="/sign_up" method="POST">
                <!-- Sign up form fields go here -->
                <label for="signupFullname">Full Name:</label>
                <input type="text" id="signupFullname" name="signupFullname" required>
 
                <label for="signupEmail">Email:</label>
                <input type="email" id="signupEmail" name="signupEmail" required>
 
                <label for="signupPassword">Password:</label>
                <input type="password" id="signupPassword" name="signupPassword" required>
 
                <p>Log in, if already have an account.</p>
 
                <button type="submit">Sign Up</button>
             </form>
          </div>
    </div>
    <!-- End -->
 
    <!-- Login Modal -->
   <div class="login-modal" id="login-modal">
       <div class="modal-content">
          <span class="close-button" id="loginclose-button">&times;</span>
          <h2>Log In</h2>
          <div class="form-container">
             <form id="loginForm" action="/login" method="POST">
                <!-- Login form fields go here -->
                <label for="loginEmail">Email:</label>
                <input type="email" id="loginEmail" name="loginEmail" required>
    
                <label for="loginPassword">Password:</label>
                <input type="password" id="loginPassword" name="loginPassword" required>
    
                <p>Don't have an account? Register first.</p>
    
                <button type="submit">Log In</button>
             </form>
          </div>
       </div>
  </div>
  
    <!-- The logout modal -->
   <div class="logoutModal" id="logoutModal">
    <div class="modal-content">
       <span class="close" id="closelogoutModal">&times;</span>
       <img src="https://i.imgur.com/SJSvHEe.png" alt="" srcset="">
       <form id="logoutForm" action="/logout" method="POST">
          <p>Are you sure you want to log out?</p>
          <button id="confirmLogout">Log Out</button>
       </form>
    </div>
  </div>
  <!-- End -->
 </section>
 <!-- header section ends -->
 <section class="profile">
  <div class="profile-container">
        <div class="profile-image">
            <!-- Add your profile image here -->
            <img id="profile-image" src="https://i.imgur.com/r79g1jQ.jpg" alt="Profile Image">
            <input type="file" id="image-input" style="display: none;">
            <button type="button" class="btn" id="upload-btn">Upload Image</button>
        </div>
        <div class="profile-info">
            <label for="full-name">Full Name: </label>
            <input type="text" id="full-name" value="<%= user.name %>">
    
            <label for="email">Email: </label>
            <input type="email" id="email" value="<%= user.email %>">
    
            <label for="password">Password: </label>
            <input type="password" id="password" value="<%= user.password %>">

            <button class="edit-account-btn" id="editAccountbtn">Edit Account</button>

            <button class="update-account-btn" id="updateAccountbtn">Update Account</button>
            
        </div>

        <% if (isLoggedIn) { %>
         <!-- Show the logout button if the user is logged in -->
         <!-- <a href="/logout">Logout</a> -->
         <div id="profileSettings"></div>
       <% } else { %>
         <!-- Show the register and login buttons if the user is not logged in -->
         <a href="/signup.html">Register</a>
         <a href="/login.html">Log In</a>
       <% } %>

  </div>
</section>
